@model List<Category>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/category/create">
                Add Category
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>
                       
                        <th> Name </th>
                        <th> Count </th>
                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var category in Model)
                        {
                            <tr>
                             

                                <td> @category.Name  </td>
                                <td>  @category.Count </td>
                                <td> @category.CreatedDate</td>
                                <td> @category.UpdatedDate</td>

                                <td> <a href="/admin/category/details/@category.Id">Details </a></td>
                                <td>
                                    <a href="/admin/category/update/@category.Id" >
                                       Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="Category" asp-action="Delete" asp-area="Admin" asp-route-id="@category.Id">

                                      <button type="submit" class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>