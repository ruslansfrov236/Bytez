@using bytez.business.Dto.Cupon

@model CreateCuponDto

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <p class="card-description">Create elements</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount"></label>
                    <input asp-for="Discount" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Discount"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CuponTime"></label>
                    <input asp-for="CuponTime" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span class="text-danger" asp-validation-for="CuponTime"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidatorForm")


}
