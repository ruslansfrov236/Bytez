@model List<Cupon>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Cupon</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/cupon/create">
                Add Cupon
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> Name </th>
                        <th> Cupon Time </th>
                        <th> Discount</th>
                    
                        <th> Create Date </th>
                        <th> Update Date </th>
                       
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cupon  in Model)
                        {
                            <tr>


                                <td> @cupon.Name  </td>
                                <td>@cupon.CuponTime</td>
                                <td>@cupon.Discount</td>
                                <td> @cupon.CreatedDate</td>
                                <td> @cupon.UpdatedDate</td>

                                
                                <td>
                                    <a href="/admin/cupon/update/@cupon.Id">
                                        Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="cupon" asp-action="Delete" asp-area="Admin" asp-route-id="@cupon.Id">

                                        <button type="submit" class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>