@model List<Product>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Product</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/product/create">
                Add Product
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>
                       
                        <th> Image </th>
                        <th> Name </th>

                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var product in Model)
                        {
                            <tr>
                               
                                <td>
                                    <img src="~/ui/assets/image/@product.ProfileProduct " style="width:80px; height:80px; object-fit:contain; border-radius:5px;" />
                                </td>
                                <td>  @(product.Title.Length >40 ? product.Title.Substring(0, 35):product.Title) </td>
                                <td> @product.CreatedDate</td>
                                <td> @product.UpdatedDate</td>

                                <td> <a href="/admin/product/details/@product.Id">Details </a></td>
                                <td>
                                    <a href="/admin/product/update/@product.Id" >
                                        Update
                                    </a>
                                </td>


                                <td>
                                    <form  method="Post">

                                        <button asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" type="submit" class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>