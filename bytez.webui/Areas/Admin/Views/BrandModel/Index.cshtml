@model List<BrandModel>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create BrandModel</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/brand/create">
                Add BrandModel
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>
                        
                        <th> Image </th>
                        <th> Name </th>
                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>
                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var brand in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/ui/assets/image/@brand.FilePath " style="width:80px; height:80px; object-fit:contain; border-radius:10px" />
                                </td>
                                <td> @brand.Name  </td>
                                
                                <td> @brand.CreatedDate</td>
                                <td> @brand.UpdatedDate</td>

                                <td> <a href="/admin/brand/details/@brand.Id">Details </a></td>
                                <td>
                                    <a href="/admin/brand/update/@brand.Id">
                                        Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="BrandModel" asp-action="Delete" asp-area="Admin" asp-route-id="@brand.Id">

                                         <button class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>