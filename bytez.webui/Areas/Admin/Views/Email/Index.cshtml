@model List<Email>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create email</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/email/create">
                Add email
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> Name </th>
                    
                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var email  in Model)
                        {
                            <tr>


                                <td> @email.EmailAddress  </td>
                                
                                <td> @email.CreatedDate</td>
                                <td> @email.UpdatedDate</td>

                                <td> <a href="/admin/email/details/@email.Id">Details </a></td>
                                <td>
                                    <a href="/admin/email/update/@email.Id">
                                        Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="email" asp-action="Delete" asp-area="Admin" asp-route-id="@email.Id">

                                        <button type="submit" class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>