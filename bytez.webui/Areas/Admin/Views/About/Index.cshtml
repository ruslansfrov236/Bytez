@model List<About>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create about</h4>
            <a class="card-description" style="display:block;  margin:20px 0" asp-controller="About" asp-action="Create" asp-area="Admin">
                Add about
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>
                      
                        <th> Image </th>

                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var about in Model)
                        {
                            <tr>
                             

                                <td>
                                    <img src="~/ui/assets/image/@about.FilePath " style="width:80px; height:80px; object-fit:cover; border-radius:10px" />
                                </td>

                                <td> @about.CreatedDate</td>
                                <td> @about.UpdatedDate</td>

                                <td> <a href="/admin/about/@about.Id">Details </a></td>
                                <td>
                                    <a asp-controller="About" asp-action="Update" asp-area="Admin" asp-route-id="@about.Id">
                                       Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="About" asp-action="Delete" asp-area="Admin" asp-route-id="@about.Id">

                                        <button class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>