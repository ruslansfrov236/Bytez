@using bytez.business.Dto.About
@model UpdateAboutDto

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update</h4>
            <p class="card-description">Update elements</p>
            <form class="forms-sample" enctype="multipart/form-data" method="post">
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <div class="form-group">
                        <img src="~/ui/assets/image/@Model.FilePath" style="width:100px; height:100px; object-fit:cover; border-radius:5px" />
                    </div>
                }
                <div class="form-group">
                    <label asp-for="@Model.file">File</label>
                    <input type="hidden" asp-for="@Model.FilePath" />
                    <input asp-for="@Model.file" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Description</label>
                    <textarea asp-for="@Model.Description" type="text" class="form-control" id="exampleInputName1" rows='4' placeholder="Enter the Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidatorForm")

    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>
}
