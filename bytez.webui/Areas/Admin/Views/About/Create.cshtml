@using bytez.business.Dto.About
@model CreateAboutDto

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <p class="card-description">Create elements</p>
            <form class="forms-sample" method="POST" asp-controller="About" asp-action="Create" asp-area="admin" enctype="multipart/form-data" >
               
                <div class="form-group">
                    <label asp-for="file">File</label>
                    <input asp-for="file" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description"  class="form-control" id="exampleInputName1" rows='4' placeholder="Enter the Decription"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidatorForm")

   
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

    <script>
      CKEDITOR.replace('Description');

    </script>
}