@model List<Header>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Header</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/header/create">
                Add header
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> Image </th>
                        <th> Title </th>

                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var header in Model)
                        {
                            <tr>

                                <td> <img src="~/ui/assets/image/@header.FilePath" alt="@header.FilePath" style="width:100px; height:100px; object-fit:cover; border-radius:12px" /> </td>
                                <td>
                                    @if (header.Title.Length > 30)
                                    {
                                        @header.Title.Substring(0, 20)
                                    }
                                    else
                                    {
                                        @header.Title
                                    }
                                </td>


                                <td> @header.CreatedDate</td>
                                <td> @header.UpdatedDate</td>

                                <td> <a href="/admin/header/details/@header.Id">Details </a></td>
                                <td>
                                    <a href="/admin/header/update/@header.Id">
                                        Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="Header" asp-action="Delete" asp-area="Admin" asp-route-id="@header.Id">

                                        <button type="submit" class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>