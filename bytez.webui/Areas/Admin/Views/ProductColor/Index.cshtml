@model List<ProductColor>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create  Color</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/color/create">
                Add Color
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>
                     
                        <th> ColorName </th>
                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var color in Model)
                        {
                            <tr>
                               

                                <td> @color.ColorName</td>

                                <td> @color.CreatedDate</td>
                                <td> @color.UpdatedDate</td>

                                <td> <a href="/admin/color/details/@color.Id">Details </a></td>
                                <td>
                                    <a href="/admin/color/update/@color.Id">
                                        Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="ProductColor" asp-action="Delete" asp-area="Admin" asp-route-id="@color.Id">

                                        <a>Delete </a>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>