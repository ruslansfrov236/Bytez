@using bytez.business.Dto.Blog

@model CreateBlogDto

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <p class="card-description">Create Blog</p>
            <form class="forms-sample"  enctype="multipart/form-data" method="post">

                <div class="form-group">

                    <label asp-for="@Model.File"></label>
                  
                    <input asp-for="@Model.File" class="form-control" id="exampleInputName1">
                    <span asp-validation-for="@Model.File"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input asp-for="@Model.Title" class="form-control" id="exampleInputName1" />
                    <span asp-validation-for="@Model.Title"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="ContentInformation"></label>
                    <input asp-for="ContentInformation" class="form-control" id="exampleInputName1" />
                    <span asp-validation-for="ContentInformation"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <textarea asp-for="@Model.Description"  class="form-control" id="exampleInputName1" rows='4' placeholder="Enter the Decription"></textarea>
                   <span asp-validation-for="@Model.Description"> </span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidatorForm")


    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('Description');

    </script>
}