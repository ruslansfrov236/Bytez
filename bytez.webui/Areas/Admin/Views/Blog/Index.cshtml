@model List<Blog>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create blog</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/blog/create">
                Add Blog
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> File </th>
                        <th> Name </th>
                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>
                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var brand in Model)
                        {
                            <tr>
                                <td>
                                @{
                                        if (brand.isVideo)
                                        {
                                            <video width="80" height="80" controls>
                                                <source src="~/ui/assets/video/@brand.VideoPath" type="video/mp4">


                                            </video>
                                        }
                                        else
                                        {
                                            <img src="~/ui/assets/image/@brand.FilePath " style="width:80px; height:80px; object-fit:contain; border-radius:10px" />
                                        }
                                }
                                 
                               
                                </td>
                                <td> @brand.Title.Substring(0, 20) </td>

                                <td> @brand.CreatedDate</td>
                                <td> @brand.UpdatedDate</td>

                                <td> <a href="/admin/blog/details/@brand.Id">Details </a></td>
                                <td>
                                    <a href="/admin/blog/update/@brand.Id">
                                        Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="Blog" asp-action="Delete" asp-area="Admin" asp-route-id="@brand.Id">

                                        <button type="submit" class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>