@model List<Blog>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Blog</h4>
            <a class="card-description" style="display:block;  margin:20px 0" href="/admin/blog/create">
                Add Category
            </a>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> Image </th>
                        <th> Title </th>
                     
                        <th> Create Date </th>
                        <th> Update Date </th>
                        <th> Details  </th>
                        <th> Update  </th>

                        <th> Delete  </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var blog in Model)
                        {
                            <tr>

                                <td>
                                    <img src="~/ui/assets/image/@blog.FilePath " style="width:80px; height:80px; object-fit:contain; border-radius:5px;" />
                                </td>
                                <td> @blog.Title  </td>
                                
                                <td> @blog.CreatedDate</td>
                                <td> @blog.UpdatedDate</td>

                                <td> <a href="/admin/blog/details/@blog.Id">Details </a></td>
                                <td>
                                    <a href="/admin/blog/update/@blog.Id">
                                        Update
                                    </a>
                                </td>

                                <td>
                                    <form method="post" asp-controller="blog" asp-action="Delete" asp-area="Admin" asp-route-id="@blog.Id">

                                        <button class="btn btn-link"> Delete</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>