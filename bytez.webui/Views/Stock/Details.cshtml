@using bytez.webui.ViewModel;

@model StockDetailVM;

<div class="card-wrapper">
    <div class="card">
  
        <div class="product-imgs">
            <div class="img-display">
                <div class="img-showcase">
                    <img src="~/ui/assets/image/@Model.Product.ProfileProduct" alt="shoe image">
                    @if (Model != null && Model.ProductImages != null)
                    {
                        @foreach (var image in Model.ProductImages.ToList())
                        {
                            <img src="~/ui/assets/image/@image.FilePath" alt="shoe image">
                        }
                    }
                </div>
            </div>
            <div class="img-select">
                <div class="img-item">
                    <a href="#" data-id="1">
                        <img src="~/ui/assets/image/@Model.Product.ProfileProduct" alt="shoe image">
                    </a>
                </div>
                @{
                    int i = 1;
                    if (Model != null && Model.ProductImages != null)
                    {
                        foreach (var image in Model.ProductImages)
                        {
                            <div class="img-item">
                                <a href="#" data-id="@i">
                                    <img src="/ui/assets/image/@image.FilePath" alt="shoe image">
                                </a>
                            </div>
                            i++; 
                        }
                    }
                }


            </div>
        </div>
        <!-- card right -->
        <div class="product-content">
            <h2 class="product-title">@Model.Product.Title</h2>
            <a href="#" class="product-link">visit nike store</a>


            <div class="product-price">
                @{
                    int discount = (int)Model.Product.Discount;
                    if (discount != null)
                    {
                        <p class="new-price"> <span>$ @Model.Product.Price (@discount %)</span></p>
                    }
                    else
                    {
                        <p class="new-price"> <span>$ @Model.Product.Price </span></p>

                    }

                }

            </div>

            <div class="product-detail">
                @Html.Raw(Model.Product.Description)
            </div>

            <div class="purchase-info">
                <input type="number" min="0" value="1">
                <button type="button" class="btn">
                    Add to Cart <i class="fas fa-shopping-cart"></i>
                </button>
                <button type="button" class="btn">Compare</button>
            </div>


        </div>
    </div>
</div>