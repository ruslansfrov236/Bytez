@using bytez.business.Dto.Login
@model LoginDto


@{
    var returnUrl = Context.Request.Query["ReturnUrl"].ToString();
    Model.ReturnUrl = 
!string.IsNullOrEmpty(returnUrl) ? returnUrl : string.Empty;
}
<div class="account">

    <div class="account-container">
        <div class="account-content">
            <h3 class="account-title">
                existing member
            </h3>
            <p class="account-text"> Welcome Back!</p>
        </div>
        <form class="account-form" asp-controller="Account" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl">

           

            <input asp-for="Email" placeholder="Enter your email" class="email" />
            <span asp-validation-for="Email"></span>
            <input asp-for="Password" placeholder="Enter your password" class="password" />
            <div>
                <button type="submit" class="btn-inverse-dark">Continue</button>
            </div>
        </form>
        <div class="account-registration">
            <p>Don’t have an account? <a href="/register"> Register Now</a></p>
        </div>
    </div>
</div>
