@using bytez.business.Dto.Messages
@model CreateMessageDto
<form class="form-message" method="post" asp-action="Index" asp-controller="Contact">
    <div class=" input-message">
        <input asp-for=" Name" class=" input-message" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class=" input-message">
        <input asp-for=" Email" class=" input-message" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class=" input-message">
        <input asp-for="Phone" class="input-message" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class=" textarea-message">
        <textarea asp-for="MessageInfo " class=" textarea-message">
        <span class="text-danger" asp-validation-for="MessageInfo"></span>

                </textarea>
    </div>
    <button type="button">Send Message</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidatorForm")


}